    <EditText
        android:id="@+id/address"
        style="@style/TextView" />

    <Button
        android:id="@+id/parse_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="parse" />

    <TextView
        android:id="@+id/result"
